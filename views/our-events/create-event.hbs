<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-6">

      <h1>Registro</h1>
      <hr>

      <form action="/event-create" method="POST">

        <div class="mb-3 row">
          <div class="col">
            <label for="eventName" class="form-label">Event Name</label>
            <input type="text" class="form-control" id="eventName" name="eventName">
            <div class="form-text">Requerido.</div>
          </div>

          <div class="col">
            <label for="category" class="form-label">Category</label>
            <input type="password" class="form-control" id="category" name="category">
            <div class="form-text">Requerido.</div>
          </div>
        </div>

        <div class="col">
          <label for="category">Tipo:</label>
          <select name="category" id="category">
            <option value="Music">Musica</option>
            <option value="Sports">Deportes</option>
            <option value="Arts & Theatre">Arte y Teatro</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="eventImg" class="form-label">Imagen del evento</label>
          <input type="url" class="form-control" id="eventImg" name="eventImg">
        </div>

        <div class="mb-3">
          <label for="date" class="form-label">Fecha del evento</label>
          <input type="date" class="form-control" id="date" name="date">
        </div>

        <div class="col">
          <label for="price" class="form-label">Precio del evento</label>
          <input type="text" class="form-control" id="price" name="price">
        </div>

        <div class="col">
          <label for="city" class="form-label">Ciudad del evento</label>
          <input type="text" class="form-control" id="city" name="city">
        </div>

        <div class="col">
          <label for="description" class="form-label">Descripcion del evento</label>
          <input type="text" class="form-control" id="description" name="description">
        </div>


        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-dark block">Crear evento</button>
        </div>

        {{#if errorMessage}}
        <div id="errorMessage">
          <p>{{errorMessage}}</p>
        </div>
        {{/if}}

      </form>
    </div>
  </div>

</div>