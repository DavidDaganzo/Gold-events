<div class="container">
  <h1>Detalles de {{user.username}}</h1>

  <hr>

  <p>Email: {{user.email}}</p>
  <img src="{{user.profileImg}}" alt="user image">
  <p>Rol: {{user.role}}</p>

  <hr>

  <a href="/lista-usuarios" class="btn btn-dark">Volver al listado</a>

  {{#if isADMIN}}
  <a href="/detalles/{{user._id}}/editar" class="btn btn-warning">Editar usuario </a>
  <form action="/detalles/{{user._id}}/eliminar" method="POST" style="display: inline">
    <input type="submit" value="Eliminar usuario" class="btn btn-danger">
  </form>

  <form action="/detalles/{{user._id}}/mejorar/EDITOR" method="POST" style="display: inline">
    <input type="submit" value="Cambiar rol a Editor" class="btn btn-primary">
  </form>
  {{/if}}

  {{#if iscurrentUser}}
  <a href="/detalles/{{user._id}}/auto-edicion" class="btn btn-warning">Editar tus datos</a>
  {{/if}}


</div>