<div class="container">
  <h1>Detalles de {{user.username}}</h1>
  <hr>
  <p>Email: {{user.email}}</p>
  <img src="{{user.profileImg}}" alt="user image">
  <p>Rol: {{user.role}}</p>

  <hr>

  <a href="/user/list" class="btn btn-dark">Volver al listado</a>

  {{#if isADMIN}}
  <a href="/user/details/{{user._id}}/edit" class="btn btn-warning">Editar usuario </a>
  <form action="/user/details/{{user._id}}/delete" method="POST" style="display: inline">
    <input type="submit" value="Eliminar estudiante" class="btn btn-danger">
  </form>

  <form action="/user/details/{{user._id}}/DEV" method="POST" style="display: inline">
    <input type="submit" value="Cambiar rol a DEV" class="btn btn-primary">
  </form>
  <form action="/user/details/{{user._id}}/TA" method="POST" style="display: inline">
    <input type="submit" value="Cambiar rol a TA" class="btn btn-secondary">
  </form>
  {{/if}}

  {{#if isTheuser}}
  <a href="/user/details/{{user._id}}/edit-me" class="btn btn-warning">Editar tus datos</a>
  {{/if}}


</div>