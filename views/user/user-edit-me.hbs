<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <h1>Editar</h1>

      <hr>

      <form action="/detalles/{{_id}}/auto-edicion" method="POST">

        <div class="mb-3 row">
          <div class="col">
            <label for="email" class="form-label">Direcci√≥n de email</label>
            <input type="email" class="form-control" id="email" name="email" value="{{email}}">
            <div class="form-text"></div>
          </div>
        </div>

        <div class="mb-3">
          <label for="username" class="form-label">Nombre de usuario</label>
          <input type="text" class="form-control" id="username" name="username" value="{{username}}">
        </div>

        <div class=" mb-3">
          <label for="profileImg" class="form-label">Imagen</label>
          <input type="url" class="form-control" id="profileImg" name="profileImg" value="{{profileImg}}">
          <div class=" form-text">Introduce la URL de la imagen de perfil.
          </div>
        </div>

        <div class="d-grid gap-2 mb-5">
          <button type="submit" class="btn btn-dark block">Completar Edicion</button>
        </div>

        {{#if errorMessage}}
        <div id="errorMessage">
          <p>{{errorMessage}}</p>
        </div>
        {{/if}}

      </form>

    </div>
  </div>
</div>